{
  "enabled": true,
  "name": "Test & Build All",
  "description": "Run all tests and builds for backend and frontend",
  "version": "1",
  "when": {
    "type": "userTriggered"
  },
  "then": {
    "type": "runCommand",
    "command": "cd backend && npm test && npm run build && cd ../frontend && npm test && npm run build"
  }
}
